{
  "name": "revive-hq-demo",
  "version": "1.0.0",
  "description": "Engineering submission for Revive HQ",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n web,api -c blue,green \"npm -w apps/web run dev\" \"npm -w apps/api run dev\"",
    "build": "npm -w apps/api run build && npm -w apps/web run build",
    "lint": "npm -w apps/web run lint",
    "start": "concurrently -n web,api -c blue,green \"npm -w apps/web run start\" \"npm -w apps/api run start\"",
    "test": "npm -w apps/api run test && npm -w apps/web run test",
    "test:api": "npm -w apps/api run test",
    "test:web": "npm -w apps/web run test",
    "test:e2e": "npm -w apps/web run test:e2e",

    "heroku-postbuild": "npm -w apps/api run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcusmcb/revive-hq-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/marcusmcb/revive-hq-demo/issues"
  },
  "homepage": "https://github.com/marcusmcb/revive-hq-demo#readme",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
